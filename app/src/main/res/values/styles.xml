<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>


    <style name="DefaultButton">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:onClick">buttonClicked</item>
    </style>

    <style name="PortfolioButton" parent="DefaultButton">
        <item name="android:background">@drawable/portfolio_button_bg</item>
    </style>

    <style name="CapstoneButton" parent="DefaultButton">
        <item name="android:background">@drawable/capstone_button_bg</item>
    </style>
</resources>
